
<!-- <%= render 'banner-show' %> -->

<div class="container">
  <div class="bike-profile">
    <div class="main">
      <div class="main-content">
        <div class= "title-show">
          <h1><%=@bike.brand %></h1>
        </div>
        <div class="row">
          <div class="photo-show" style="background-image: url(<%= image_path(@bike.photo)%>);" ></div>
          <div class="info-bike-show">
            <h3><%= @bike.description %></h3>
            <p>Spec: <%= @bike.spec %></p>
            <p>Brand: <%= @bike.brand %></p>
            <p><%= @bike.user.email %></p>
            <p><%= @bike.city %></p>
            <p><%= @bike.address %></p>
            <h4><%= @bike.price %>$ per day</h4>
          </div>
        </div>

        <div class="row">
          <div class="map-1">
            <div id="map" style="width: 100%; height: 100%; margin-bottom: 10px;" data-markers="<%= @markers.to_json %>">
            </div>
          </div>
        </div>
        <div class="row">
      <div class="reviews">
       <p><%= render 'review-show' %></p>
      </div>
    </div>
      </div>
    </div>
    <div class="booking">
      <div class="booking-content">
        <h3>Booking Form</h3>
        <%= render 'booking-form' %>
        <!-- <a href="" class="btn btn-primary">Book</a> -->
      </div>
    </div>

  </div>

</div>



